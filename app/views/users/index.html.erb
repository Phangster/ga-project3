<div class="container" style="display: flex; justify-content: center; background-color: #EEE2DC; color: #123C69;">
<div class="row">
<div class="col-sm">

  <p style="text-align:center; margin-top: 50px; font-weight: bold; font-size: 20px">Check Out The Crowds At These Restaurants</p>
  <br/>

  <p><%= image_tag("food.png", size: "1000x150") %></p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" style="text-align:right; width: 50%">Restaurants</th>
        <th scope="col">Availability</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td style="text-align:right"><%= link_to user.name, user_path(user) %></td>
          <td>
            <% if @users_info[user.id][:total_tables_count] == 0 %>
              <p>No tables available currently.</p>
            <% else %>
              <%= @users_info[user.id][:free_tables_count] %> Tables Available
              <% if @users_info[user.id][:free_tables_count].to_f / @users_info[user.id][:total_tables_count].to_f < 0.2 %>
                <p class="small" style="color: #AC3B61;"><strong>Filling up fast!</strong></p>
              <% elsif  @users_info[user.id][:free_tables_count].to_f / @users_info[user.id][:total_tables_count].to_f < 0.5 %>
                <p class="small" style="color:orange"><strong>More than half tables are taken!</strong></p>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
</div>
</div>
