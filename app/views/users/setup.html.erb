<div class="container table-index-container">
<div class="row">
<div class="col-sm">

<div class="ektitle ektitlediv">
  <p>First time here? Tell us more about yourself!</p>
</div>

<div class="setupdiv">
<%= form_with scope: :user, url: user_update_path(current_user), local: true do |form| %>

  <p><strong>
    <%= form.label :name, 'Name of your restaurant: ' %></strong><br>
    <%= form.text_field :name %>
  </p>

  <br/><p><strong>Tables in your restaurant:</strong></p>

  <div class="ekseatersetupdiv">

    <p><%= image_tag("table.png", size: "100x100") %></p>
    <%= image_tag("splash.png", size: "150x70") %>
    <h5 class="ekseatertype">2-Seaters</h5><br/>

    <p>
      <%= form.number_field :two_seater, :min => 0, :max => 100, value: 0 %>
    </p>

  </div>

  <div class="ekseatersetupdiv">

    <p><%= image_tag("table.png", size: "100x100") %></p>
    <%= image_tag("splash.png", size: "150x70") %>
    <h5 class="ekseatertype">4-Seaters</h5><br/>

    <p>
      <%= form.number_field :four_seater, :min => 0, :max => 100, value: 0 %>
    </p>

  </div>

  <div class="ekseatersetupdiv">

    <p><%= image_tag("table.png", size: "100x100") %></p>
    <%= image_tag("splash.png", size: "150x70") %>
    <h5 class="ekseatertype">6-Seaters</h5><br/>

    <p>
      <%= form.number_field :six_seater, :min => 0, :max => 100, value: 0 %>
    </p>

  </div>

  <p>
    <%= form.submit 'Save My Info!', class:"btn btn-sm eksubmitbtn" %>
  </p>

<% end %>
<%# </div> %>


</div>
</div>
</div>