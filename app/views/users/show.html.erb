<div class="container">
<div class="row">
<div class="col-sm">

  <i class="material-icons">keyboard_return</i>&nbsp;
  <div>
    <p><%= link_to 'Previous page', users_path %></p>
  </div>

  <div>
    <p>Tables available at <strong><%= @user.name %></strong></p>
    <p>Address: 8 Claymore Road, Singapore 168888</p>
    <p>Contact: 6888-6888</p>
    <p><a href="#">Book Now</a></p>
  </div>

  <% if patron_signed_in? %>
    <% if @is_favourite %>
      <%= button_to 'Remove From Favourites', favourite_delete_path(current_patron), method: :delete, params: { user_id: @user.id } %>
    <% else %>
      <%= button_to 'Add To Favourites', patron_favourites_path(current_patron), method: :post, params: { user_id: @user.id } %>
    <% end %>
  <% end %>

  <div>
    <div style="text-align: center; float: left; width: 300px; height: 500px; margin-right: 20px; padding: 10px">
      <p><%= image_tag("table.jpg", size: "300x300") %></p>
      <p><strong>2-Seaters</strong></p>
      <p><%= @two_seaters_free.count  %> available / <%= @two_seaters_total %> total </p>
    </div>

    <div style="text-align: center; float: left; width: 300px; height: 500px; margin-right: 20px; padding: 10px">
      <p><%= image_tag("table2.jpg", size: "300x300") %></p>
      <p><strong>4-Seaters</strong></p>
      <p><%= @four_seaters_free.count  %> available / <%= @four_seaters_total %> total </p>
    </div>

    <div style="text-align: center; float: left; width: 300px; height: 500px; padding: 10px">
      <p><%= image_tag("table.jpg", size: "300x300") %></p>
      <p><strong>6-Seaters</strong></p>
      <p><%= @six_seaters_free.count  %> available / <%= @six_seaters_total %> total </p>
    </div>
  </div>

</div>
</div>
</div>

<div style="height:100px"></div>
