      <div style="display: flex; flex-wrap: wrap; flex-direction: row; justify-content: center;">
        <p><%= button_to '+', table_update_path(current_user), method: :patch, params: {seater: 2, free: true}, class:"btn btn-light" %>&nbsp;&nbsp;&nbsp;<%= image_tag("tablemini.png", size: "38x38")%></p>&nbsp;&nbsp;&nbsp;
        <p><%= button_to '-', table_update_path(current_user), method: :patch, params: {seater: 2, free: false}, class:"btn btn-light" %>&nbsp;&nbsp;&nbsp;<%= image_tag("tablemini.png", size: "38x38") %></p>
      </div>
    </div></div><br/>

