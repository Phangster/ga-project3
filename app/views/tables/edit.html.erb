<h1>Tables#edit</h1>

<%= form_with scope: :table, url: table_path, method: :patch, local: true do |form| %>

  <p>
    <%= form.label :seater %><br>
    <%= form.text_area :seater %>
  </p>

  <p>
    <%= form.label :is_free, 'Availability' %><br>
    <%= form.select :is_free, [['Available', true], ['Occupied', false]] %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<td><%= link_to 'Delete this table',
        @table,
        method: :delete,
        data: { confirm: 'Delete this table?' } %></td>