<div class="container table-index-container">
<div class="row">
<div class="col-sm">

  <div class="ektitle ektitlediv">
    <p>Edit your profile</p>
  </div>

  <div class="profileinfodiv">
    <%= image_tag 'profilepic.png', class:"wyprofileimg"%>
    <br/>
    <p><%= button_tag 'Upload Photo', class: "btn btn-sm buttonTo"%></p>
  </div>

  <div class="wyEditForm">
    <%= form_with scope: :patron, url: patron_path, method: :patch, local: true do |form| %>
      <p>
        <%= form.label :name %>
        <%= form.text_field :name %><br>
      </p>

      <%= form.submit 'Save Profile', class:"btn btn-primary btn-sm" %>
    <% end %>
  </div>

</div>
</div>
</div>