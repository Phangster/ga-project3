<!DOCTYPE html>
<html>
  <head>
    <title>Crowded Not</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>

    <div class="container">
    <div class="row">
    <nav class="navbar navbar-expand-lg navbar-light">

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <%= link_to 'CrowdedNot', root_url, method: :get, class: "navbar-brand" %>
          <%= link_to 'Explore', users_url, method: :get, class: "nav-item nav-link" %>

          <% if !user_signed_in? && !patron_signed_in? %>
            <%= link_to 'Sign In As Restaurant', new_user_session_url, method: :get, class: "nav-item nav-link" %>
            <%= link_to 'Sign In As Patron', new_patron_session_url, method: :get, class: "nav-item nav-link" %>

          <% elsif user_signed_in? %>
            <%= link_to 'Dashboard', user_tables_path(current_user), class: "nav-item nav-link" %>
            <%= link_to 'Sign Out', destroy_user_session_url, method: :delete, class: "nav-item nav-link" %>

          <% elsif patron_signed_in? %>
            <%= link_to 'Profile', patron_path(current_patron), class: "nav-item nav-link" %>
            <%= link_to 'My Favourites', patron_favourites_path(current_patron), class: "nav-item nav-link" %>
            <%= link_to 'Sign Out', destroy_patron_session_url, method: :delete, class: "nav-item nav-link" %>
          <% end %>
        </div>
      </div>
    </nav>
    </div>
    </div>

    <div class="container">
    <div class="row">
    <div class="col-md-12 py-3">

    <% if notice %>
      <div class="alert alert-info" role="alert"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger" role="alert"><%= alert %></div>
    <% end %>

      <%= yield %>
    </div>
    </div>
    </div>

    <footer class="page-footer text-center">
      <div class="container">
        <div class="row">
          <div class="col-md-12 py-3">
            <div class="mb-4 flex-center">
              <a href="#"><i class="fa fa-facebook fa-lg mr-md-5 mr-3"></i></a>
              <a href="#"><i class="fa fa-twitter fa-lg mr-md-5 mr-3"></i></a>
              <a href="#"><i class="fa fa-linkedin fa-lg mr-md-5 mr-3"></i></a>
              <a href="#"><i class="fa fa-instagram fa-lg"></i></a>
            </div>
            <p>Â© 2018 Copyright &nbsp;&nbsp;<a href="#">CrowdedNot</a></p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>